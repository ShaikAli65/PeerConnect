{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "default": {
      "format": "%(levelname)-8s %(name)-30s %(funcName)-25s - %(message)s"
    },
    "detailed": {
      "format": "%(asctime)s - %(levelname)-8s %(name)-30s %(funcName)-25s - %(message)s"
    }
  },
  "handlers": {
    "rfile_handler": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "detailed",
      "filename": "logs.log",
      "maxBytes": 5242880,
      "backupCount": 3,
      "encoding": "utf8"
    },

    "console": {
      "class": "logging.StreamHandler",
      "formatter": "default",
      "level": "DEBUG"
    },

    "file": {
      "class": "logging.FileHandler",
      "filename": "default.log",
      "formatter": "detailed",
      "level": "DEBUG"
    },

    "queue_handler": {
      "class": "logging.handlers.QueueHandler",
      "handlers": ["rfile_handler"]
    },

    "discovery_sub_handler": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "detailed",
      "filename": "discovery.log",
      "maxBytes": 102400,
      "backupCount": 3,
      "encoding": "utf8"
    },

    "discovery_handler": {
      "class" : "logging.handlers.QueueHandler",
      "handlers": ["discovery_sub_handler"]
    }

  },
  "queue_handlers": ["queue_handler", "discovery_handler"],

  "loggers": {
    "": {
      "handlers": [
        "console",
        "queue_handler"
      ],
      "level": "DEBUG"
    },
    "websockets": {
      "level": "INFO"
    },
    "kademlia" : {
      "level": "INFO",
      "propagate": false
    },
    "rpcudp" : {
      "level": "INFO"
    },
    "src.core.requests": {
      "propagate": false
    },
    "kademlia.protocol": {
      "propagate": false
    },
    "src.core.discover": {
      "propagate": false
    }
  }
}
